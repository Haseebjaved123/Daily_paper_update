{
  "paper_selection": {
    "max_results": 50,
    "min_abstract_length": 200,
    "max_abstract_length": 2000,
    "min_title_length": 20,
    "max_authors": 10,
    "min_authors": 1
  },
  "domains": {
    "cs.AI": "AI",
    "cs.LG": "ML", 
    "cs.CL": "NLP",
    "cs.CV": "CV",
    "cs.RO": "RL",
    "cs.HC": "Healthcare AI",
    "cs.MM": "Multimodal",
    "stat.ML": "Theory",
    "cs.NE": "Neural Networks",
    "cs.IR": "Information Retrieval"
  },
  "schedule": {
    "timezone": "UTC",
    "frequency": "every_2_hours",
    "cron": "0 */2 * * *"
  },
  "enhanced_features": {
    "include_figures": true,
    "extract_insights": true,
    "show_statistics": true,
    "key_phrases_detection": true,
    "methodology_analysis": true,
    "complexity_rating": true
  },
  "figure_extraction": {
    "enabled": true,
    "fallback_to_placeholder": true,
    "placeholder_style": "badge",
    "max_figure_size": "1MB"
  }
}
